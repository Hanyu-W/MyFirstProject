<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModel.Controls.ControlsMenuView"
             Title="{Binding Title}">
    <StackLayout>
        <Grid Margin="20, 35, 20, 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row ="0" Grid.Column="0" Text="Slider" Command="{Binding OnSliderClicked}"/>
            <Button Grid.Row ="0" Grid.Column="1" Text="Stepper" Command="{Binding OnStepperClicked}"/>
            <Button Grid.Row ="1" Grid.Column="0" Text="Switch" Command="{Binding OnSwitchClicked}"/>
            <Button Grid.Row ="1" Grid.Column="1" Text="Two Switch" Command="{Binding OnTwoSwitchClicked}"/>
            <Button Grid.Row ="2" Grid.Column="0" Text="Entry" Command="{Binding OnEntryClicked}"/>
            <Button Grid.Row ="2" Grid.Column="1" Text="Picker Menu" Command="{Binding OnPickerMenuClicked}"/>
            <Button Grid.Row ="3" Grid.Column="0" Text="Date Picker Menu" Command="{Binding OnDatePickerMenuClicked}"/>
        </Grid>
        </StackLayout>
</ContentPage>