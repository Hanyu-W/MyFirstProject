<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModel.List_View.DisplayPersonsButtonView.EditPerson.EditPersonView"
             Title="{Binding Title}">
    <StackLayout Padding="5">

        <Label Text="Movie Name"
               FontAttributes="Bold"
               TextColor="Black"/>

        <Entry Placeholder="Enter Movie Name"
               FontSize="Small"
               HorizontalOptions="FillAndExpand"
               Text="{Binding MovieName}"
               x:Name="MovieName"/>

        <Button Text="Update"
                Command="{Binding UpdateBtnClicked}"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="Maroon"
                TextColor="White"
                x:Name="saveBtn"/>
        
    </StackLayout>
</ContentPage>