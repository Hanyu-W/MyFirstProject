<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModel.List_View.ListViewMenuView"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Grid Margin="20, 35, 20, 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row ="0" Grid.Column="0" Text="Display Persons" Command="{Binding OnDisplayPersonsClicked}"/>
                <Button Grid.Row ="0" Grid.Column="1" Text="Display Persons Image" Command="{Binding OnDisplayPersonsImageClicked}"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>